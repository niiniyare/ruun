package views

import (
	"github.com/niiniyare/ruun/views/components/atoms"
)

// TestAtomsPage renders a test page for all refactored atoms
templ TestAtomsPage() {
	<!DOCTYPE html>
	<html lang="en">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>Atom Testing Page</title>
		<style>
			body { font-family: system-ui, sans-serif; padding: 2rem; max-width: 1200px; margin: 0 auto; }
			.test-section { margin-bottom: 3rem; padding: 1.5rem; border: 1px solid #e5e7eb; border-radius: 8px; }
			.test-section h2 { margin-top: 0; color: #1f2937; }
			.test-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem; margin-bottom: 1rem; }
			.test-item { padding: 1rem; background: #f9fafb; border-radius: 6px; }
			.test-item h4 { margin: 0 0 0.5rem 0; font-size: 0.875rem; color: #6b7280; }
		</style>
	</head>
	<body>
		<h1>Atom Testing Page</h1>
		
		<!-- Button Tests -->
		<section class="test-section">
			<h2>Button Atom</h2>
			<div class="test-grid">
				<div class="test-item">
					<h4>Primary Button</h4>
					@atoms.Button(atoms.ButtonProps{
						Text:    "Primary Button",
						Variant: atoms.ButtonVariantPrimary,
						Size:    atoms.ButtonSizeMD,
						State:   atoms.ButtonStateDefault,
					})
				</div>
				<div class="test-item">
					<h4>Secondary Button</h4>
					@atoms.Button(atoms.ButtonProps{
						Text:    "Secondary",
						Variant: atoms.ButtonVariantSecondary,
						Size:    atoms.ButtonSizeMD,
						State:   atoms.ButtonStateDefault,
					})
				</div>
				<div class="test-item">
					<h4>Destructive Button</h4>
					@atoms.Button(atoms.ButtonProps{
						Text:    "Delete",
						Variant: atoms.ButtonVariantDestructive,
						Size:    atoms.ButtonSizeMD,
						State:   atoms.ButtonStateDefault,
					})
				</div>
				<div class="test-item">
					<h4>Disabled Button</h4>
					@atoms.Button(atoms.ButtonProps{
						Text:     "Disabled",
						Variant:  atoms.ButtonVariantPrimary,
						Size:     atoms.ButtonSizeMD,
						State:    atoms.ButtonStateDisabled,
						Disabled: true,
					})
				</div>
				<div class="test-item">
					<h4>Loading Button</h4>
					@atoms.Button(atoms.ButtonProps{
						Text:    "Loading...",
						Variant: atoms.ButtonVariantPrimary,
						Size:    atoms.ButtonSizeMD,
						State:   atoms.ButtonStateLoading,
						Loading: true,
					})
				</div>
				<div class="test-item">
					<h4>Button with Icons</h4>
					@atoms.Button(atoms.ButtonProps{
						Text:      "Save",
						Variant:   atoms.ButtonVariantPrimary,
						Size:      atoms.ButtonSizeMD,
						IconLeft:  "save",
						IconRight: "chevron-right",
					})
				</div>
			</div>
		</section>

		<!-- Icon Tests -->
		<section class="test-section">
			<h2>Icon Atom</h2>
			<div class="test-grid">
				<div class="test-item">
					<h4>Small Icons</h4>
					@atoms.Icon(atoms.IconProps{Name: "home", Size: atoms.IconSizeXS})
					@atoms.Icon(atoms.IconProps{Name: "user", Size: atoms.IconSizeSM})
					@atoms.Icon(atoms.IconProps{Name: "settings", Size: atoms.IconSizeMD})
				</div>
				<div class="test-item">
					<h4>Large Icons</h4>
					@atoms.Icon(atoms.IconProps{Name: "search", Size: atoms.IconSizeLG})
					@atoms.Icon(atoms.IconProps{Name: "filter", Size: atoms.IconSizeXL})
				</div>
				<div class="test-item">
					<h4>State Icons</h4>
					@atoms.Icon(atoms.IconProps{Name: "check", State: atoms.IconStateDefault})
					@atoms.Icon(atoms.IconProps{Name: "x", State: atoms.IconStateError})
					@atoms.Icon(atoms.IconProps{Name: "eye", State: atoms.IconStateDisabled})
				</div>
			</div>
		</section>

		<!-- Badge Tests -->
		<section class="test-section">
			<h2>Badge Atom</h2>
			<div class="test-grid">
				<div class="test-item">
					<h4>Badge Variants</h4>
					@atoms.Badge(atoms.BadgeProps{Text: "Default", Variant: atoms.BadgeVariantDefault, Size: atoms.BadgeSizeMD})
					@atoms.Badge(atoms.BadgeProps{Text: "Success", Variant: atoms.BadgeVariantSuccess, Size: atoms.BadgeSizeMD})
					@atoms.Badge(atoms.BadgeProps{Text: "Warning", Variant: atoms.BadgeVariantWarning, Size: atoms.BadgeSizeMD})
					@atoms.Badge(atoms.BadgeProps{Text: "Error", Variant: atoms.BadgeVariantDestructive, Size: atoms.BadgeSizeMD})
				</div>
				<div class="test-item">
					<h4>Badge Sizes</h4>
					@atoms.Badge(atoms.BadgeProps{Text: "XS", Variant: atoms.BadgeVariantDefault, Size: atoms.BadgeSizeXS})
					@atoms.Badge(atoms.BadgeProps{Text: "SM", Variant: atoms.BadgeVariantDefault, Size: atoms.BadgeSizeSM})
					@atoms.Badge(atoms.BadgeProps{Text: "MD", Variant: atoms.BadgeVariantDefault, Size: atoms.BadgeSizeMD})
					@atoms.Badge(atoms.BadgeProps{Text: "LG", Variant: atoms.BadgeVariantDefault, Size: atoms.BadgeSizeLG})
				</div>
				<div class="test-item">
					<h4>Removable Badge</h4>
					@atoms.Badge(atoms.BadgeProps{
						Text:      "Removable",
						Variant:   atoms.BadgeVariantDefault,
						Size:      atoms.BadgeSizeMD,
						Removable: true,
						OnRemove:  "alert('Remove clicked')",
					})
				</div>
			</div>
		</section>

		<!-- Tag Tests -->
		<section class="test-section">
			<h2>Tag Atom</h2>
			<div class="test-grid">
				<div class="test-item">
					<h4>Tag Variants</h4>
					@atoms.Tag(atoms.TagProps{Text: "Default", Variant: atoms.TagVariantDefault, Size: atoms.TagSizeMD})
					@atoms.Tag(atoms.TagProps{Text: "Success", Variant: atoms.TagVariantSuccess, Size: atoms.TagSizeMD})
					@atoms.Tag(atoms.TagProps{Text: "Warning", Variant: atoms.TagVariantWarning, Size: atoms.TagSizeMD})
				</div>
				<div class="test-item">
					<h4>Interactive Tags</h4>
					@atoms.Tag(atoms.TagProps{
						Text:      "Clickable",
						Variant:   atoms.TagVariantDefault,
						Size:      atoms.TagSizeMD,
						Clickable: true,
						OnClick:   "alert('Tag clicked')",
					})
					@atoms.Tag(atoms.TagProps{
						Text:      "Removable",
						Variant:   atoms.TagVariantDefault,
						Size:      atoms.TagSizeMD,
						Removable: true,
						OnRemove:  "alert('Tag removed')",
					})
				</div>
			</div>
		</section>

		<!-- Autocomplete Tests -->
		<section class="test-section">
			<h2>Autocomplete Atom</h2>
			<div class="test-grid">
				<div class="test-item">
					<h4>Basic Autocomplete</h4>
					@atoms.Autocomplete(atoms.AutocompleteProps{
						ID:          "test-autocomplete",
						Name:        "test",
						Placeholder: "Search...",
						Variant:     atoms.AutocompleteVariantDefault,
						Size:        atoms.AutocompleteSizeMD,
						State:       atoms.AutocompleteStateDefault,
						ShowIcon:    true,
						ShowClear:   true,
						Options: []atoms.AutocompleteOption{
							{Value: "1", Label: "Option 1", Description: "First option"},
							{Value: "2", Label: "Option 2", Description: "Second option"},
						},
					})
				</div>
			</div>
		</section>

		<!-- DatePicker Tests -->
		<section class="test-section">
			<h2>DatePicker Atom</h2>
			<div class="test-grid">
				<div class="test-item">
					<h4>Basic Date Picker</h4>
					@atoms.DatePicker(atoms.DatePickerProps{
						ID:           "test-datepicker",
						Name:         "date",
						Placeholder:  "Select date...",
						Variant:      atoms.DatePickerVariantDefault,
						Size:         atoms.DatePickerSizeMD,
						State:        atoms.DatePickerStateDefault,
						ShowCalendar: true,
					})
				</div>
			</div>
		</section>

		<!-- Label Tests -->
		<section class="test-section">
			<h2>Label Atom</h2>
			<div class="test-grid">
				<div class="test-item">
					<h4>Required Label</h4>
					@atoms.Label(atoms.LabelProps{
						For:      "test-input",
						Text:     "Username",
						Required: true,
						Size:     atoms.LabelSizeMD,
						State:    atoms.LabelStateDefault,
					})
				</div>
				<div class="test-item">
					<h4>Optional Label</h4>
					@atoms.Label(atoms.LabelProps{
						For:      "optional-input", 
						Text:     "Bio",
						Optional: true,
						Size:     atoms.LabelSizeMD,
						State:    atoms.LabelStateDefault,
					})
				</div>
			</div>
		</section>

		<script>
			// Simple JS for testing interactions
			console.log('Atom test page loaded');
		</script>
	</body>
	</html>
}