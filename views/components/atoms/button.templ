		Size:        props.Size,
		Type:        props.Type,
		Disabled:    props.Disabled,
		Loading:     props.Loading,
		Icon:        props.Icon,
		IconLeft:    props.IconLeft,
		IconRight:   props.IconRight,
		Class:       props.Class,
		ID:          props.ID,
		Name:        props.Name,
