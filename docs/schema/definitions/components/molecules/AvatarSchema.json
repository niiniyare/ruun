{
  "type": "object",
  "properties": {
    "$$id": {
      "type": "string",
      "description": "The unique id of the component, mainly used to locate json nodes in the page designer"
    },
    "className": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "Class name"
    },
    "$ref": {
      "type": "string",
      "description": "Used together with definitions, an infinite loop renderer can be implemented."
    },
    "disabled": {
      "type": "boolean",
      "description": "Whether to disable"
    },
    "disabledOn": {
      "$ref": "#/definitions/SchemaExpression",
      "description": "Whether to disable expressions"
    },
    "hidden": {
      "type": "boolean",
      "description": "Whether to hide"
    },
    "hiddenOn": {
      "$ref": "#/definitions/SchemaExpression",
      "description": "Whether to hide expressions"
    },
    "visible": {
      "type": "boolean",
      "description": "Whether to display"
    },
    "visibleOn": {
      "$ref": "#/definitions/SchemaExpression",
      "description": "Whether to display expressions"
    },
    "id": {
      "type": "string",
      "description": "The unique id of the component, mainly used for log collection"
    },
    "onEvent": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "weight": {
            "type": "number"
          },
          "actions": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/ListenerAction"
            }
          },
          "debounce": {
            "$ref": "#/definitions/debounceConfig"
          },
          "track": {
            "$ref": "#/definitions/trackConfig"
          }
        },
        "required": [
          "actions"
        ],
        "additionalProperties": false
      },
      "description": "Event action configuration"
    },
    "static": {
      "type": "boolean",
      "description": "Whether to display statically"
    },
    "staticOn": {
      "$ref": "#/definitions/SchemaExpression",
      "description": "Whether to display expressions statically"
    },
    "staticPlaceholder": {
      "type": "string",
      "description": "Static display of empty value placeholder"
    },
    "staticClassName": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "Static display form item class name"
    },
    "staticLabelClassName": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "Static display of form item Label class name"
    },
    "staticInputClassName": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "Static display of form item Value class name"
    },
    "staticSchema": {},
    "style": {
      "type": "object",
      "description": "Custom style"
    },
    "editorSetting": {
      "type": "object",
      "properties": {
        "behavior": {
          "type": "string",
          "description": "Component behavior and usage, such as create, update, remove"
        },
        "displayName": {
          "type": "string",
          "description": "Component name, usually the business name for easy location"
        },
        "mock": {
          "description": "Editor fake data for easy display"
        }
      },
      "description": "Editor configuration, can be ignored at runtime"
    },
    "useMobileUI": {
      "type": "boolean",
      "description": "Can be used to turn off mobile style at the component level"
    },
    "testIdBuilder": {
      "$ref": "#/definitions/TestIdBuilder"
    },
    "type": {
      "type": "string",
      "const": "avatar"
    },
    "testid": {
      "type": "string"
    },
    "badge": {
      "$ref": "#/definitions/BadgeObject",
      "description": "corner mark"
    },
    "src": {
      "type": "string",
      "description": "Image address"
    },
    "defaultAvatar": {
      "type": "string",
      "description": "Default avatar"
    },
    "icon": {
      "type": "string",
      "description": "icon"
    },
    "fit": {
      "type": "string",
      "enum": [
        "fill",
        "contain",
        "cover",
        "none",
        "scale-down"
      ],
      "description": "How the image is scaled relative to the container"
    },
    "shape": {
      "type": "string",
      "enum": [
        "circle",
        "square",
        "rounded"
      ],
      "description": "shape"
    },
    "size": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "string",
          "const": "small"
        },
        {
          "type": "string",
          "const": "default"
        },
        {
          "type": "string",
          "const": "large"
        }
      ],
      "description": "size"
    },
    "text": {
      "type": "string",
      "description": "text"
    },
    "gap": {
      "type": "number",
      "description": "Character type distance from left and right borders in pixels"
    },
    "alt": {
      "type": "string",
      "description": "Alternative text address when the image cannot be displayed"
    },
    "draggable": {
      "type": "boolean",
      "description": "Whether the image is allowed to be dragged"
    },
    "crossOrigin": {
      "type": "string",
      "enum": [
        "anonymous",
        "use-credentials",
        ""
      ],
      "description": "Image CORS attributes"
    },
    "onError": {
      "type": "string",
      "description": "Whether to handle image loading failure by default, string function"
    }
  },
  "required": [
    "crossOrigin",
    "type"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "./AvatarSchema.json"
}