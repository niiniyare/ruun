{
  "type": "object",
  "properties": {
    "$$id": {
      "type": "string",
      "description": "The unique id of the component, mainly used to locate json nodes in the page designer."
    },
    "className": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "Container CSS class name"
    },
    "$ref": {
      "type": "string",
      "description": "Used with definitions, you can implement an infinite loop renderer."
    },
    "disabled": {
      "type": "boolean",
      "description": "Whether to disable"
    },
    "disabledOn": {
      "$ref": "#/definitions/SchemaExpression",
      "description": "Whether to disable expressions"
    },
    "hidden": {
      "type": "boolean",
      "description": "Whether to hide"
    },
    "hiddenOn": {
      "$ref": "#/definitions/SchemaExpression",
      "description": "Whether to hide the expression"
    },
    "visible": {
      "type": "boolean",
      "description": "Whether to display"
    },
    "visibleOn": {
      "$ref": "#/definitions/SchemaExpression",
      "description": "Whether to display the expression"
    },
    "id": {
      "type": "string",
      "description": "Mainly used to distinguish which button is used in user behavior tracking"
    },
    "onEvent": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "weight": {
            "type": "number"
          },
          "actions": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/ListenerAction"
            }
          },
          "debounce": {
            "$ref": "#/definitions/debounceConfig"
          },
          "track": {
            "$ref": "#/definitions/trackConfig"
          }
        },
        "required": [
          "actions"
        ],
        "additionalProperties": false
      },
      "description": "Event action configuration"
    },
    "static": {
      "type": "boolean",
      "description": "Whether to display statically"
    },
    "staticOn": {
      "$ref": "#/definitions/SchemaExpression",
      "description": "Whether to display expressions statically"
    },
    "staticPlaceholder": {
      "type": "string",
      "description": "Statically display an empty value placeholder"
    },
    "staticClassName": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "Statically display the form item class name"
    },
    "staticLabelClassName": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "Statically display the form item Label class name"
    },
    "staticInputClassName": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "Statically display the form item Value class name"
    },
    "staticSchema": {},
    "style": {
      "type": "object",
      "description": "Component style"
    },
    "editorSetting": {
      "type": "object",
      "properties": {
        "behavior": {
          "type": "string",
          "description": "Component behavior and purpose, such as create, update, remove"
        },
        "displayName": {
          "type": "string",
          "description": "Component name, usually a business name for easy location"
        },
        "mock": {
          "description": "Editor fake data, convenient for display"
        }
      },
      "description": "Editor configuration, can be ignored at runtime"
    },
    "useMobileUI": {
      "type": "boolean",
      "description": "Can be used to disable mobile styling at the component level"
    },
    "testIdBuilder": {
      "$ref": "#/definitions/TestIdBuilder"
    },
    "type": {
      "type": "string",
      "enum": [
        "button",
        "submit",
        "reset"
      ],
      "description": "Specify the button type. Supports three types: button, submit, or reset."
    },
    "tests": {
      "type": "string"
    },
    "block": {
      "type": "boolean",
      "description": "Whether to display in block format. The default is inline."
    },
    "disabledTip": {
      "type": "string",
      "description": "Text hint when disabled."
    },
    "icon": {
      "$ref": "#/definitions/SchemaIcon",
      "description": "Button icon, iconfont class name"
    },
    "iconClassName": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "The css class name on the icon"
    },
    "rightIcon": {
      "$ref": "#/definitions/SchemaIcon",
      "description": "Right button icon, iconfont class name"
    },
    "rightIconClassName": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "The css class name on the right icon"
    },
    "loadingClassName": {
      "$ref": "#/definitions/SchemaClassName",
      "description": "The css class name on loading"
    },
    "label": {
      "type": "string",
      "description": "Button text"
    },
    "level": {
      "type": "string",
      "enum": [
        "info",
        "success",
        "warning",
        "danger",
        "link",
        "primary",
        "dark",
        "light",
        "secondary"
      ],
      "description": "Button style"
    },
    "primary": {
      "type": "boolean"
    },
    "size": {
      "type": "string",
      "enum": [
        "xs",
        "sm",
        "md",
        "lg"
      ],
      "description": "Button size"
    },
    "tooltip": {
      "$ref": "#/definitions/SchemaTooltip"
    },
    "tooltipPlacement": {
      "type": "string",
      "enum": [
        "top",
        "right",
        "bottom",
        "left"
      ]
    },
    "confirmText": {
      "type": "string",
      "description": "Prompt text, user confirmation will be requested before configuring the operation."
    },
    "required": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "If the button is in a form, configuring this property will require the user to validate the specified field before triggering the action."
    },
    "activeLevel": {
      "type": "string",
      "description": "Style when activated"
    },
    "activeClassName": {
      "type": "string",
      "description": "Class name in the activated state"
    },
    "close": {
      "type": [
        "boolean",
        "string"
      ],
      "description": "If the button is in a popup window, you can configure whether to close the popup window after the action is completed, or specify the target popup window to close."
    },
    "requireSelected": {
      "type": "boolean",
      "description": "When a button is a batch operation button, it must have a check mark in order to be clickable. If this property is set to false, it can be clicked even without a check mark."
    },
    "mergeData": {
      "type": "boolean",
      "description": "Whether to merge the data in the popup into the parent scope."
    },
    "target": {
      "type": "string",
      "description": "You can specify who should trigger this action."
    },
    "countDown": {
      "type": "number",
      "description": "Ban countdown after click (seconds)"
    },
    "countDownTpl": {
      "type": "string",
      "description": "Custom countdown text"
    },
    "badge": {
      "$ref": "#/definitions/BadgeObject",
      "description": "corner mark"
    },
    "hotKey": {
      "type": "string",
      "description": "Keyboard shortcuts"
    },
    "loadingOn": {
      "type": "string",
      "description": "Whether to display loading effect"
    },
    "onClick": {
      "anyOf": [
        {
          "type": "string"
        },
        {}
      ],
      "description": "Custom event handling function"
    },
    "body": {
      "$ref": "#/definitions/SchemaCollection",
      "description": "Child content"
    },
    "actionType": {
      "type": "string",
      "const": "ajax",
      "description": "Specifies the behavior of sending ajax."
    },
    "api": {
      "$ref": "#/definitions/SchemaApi",
      "description": "Configure ajax sending address"
    },
    "feedback": {
      "$ref": "#/definitions/FeedbackDialog"
    },
    "reload": {
      "$ref": "#/definitions/SchemaReload"
    },
    "redirect": {
      "type": "string"
    },
    "ignoreConfirm": {
      "type": "boolean"
    },
    "isolateScope": {
      "type": "boolean",
      "description": "Whether to enable request isolation, mainly used to isolate linked CRUD and Service requests."
    }
  },
  "required": [
    "actionType",
    "api",
    "type"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "./AjaxActionSchema.json"
}
