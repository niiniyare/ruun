{
  "type": "object",
  "properties": {
    "axis": {
      "type": "string",
      "enum": [
        "both",
        "x",
        "y"
      ],
      "description": "The draggable direction, the default is all directions, supports setting to X or Y axis"
    },
    "defaultPosition": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false,
      "description": "the starting position of the element"
    },
    "bounds": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "left": {
              "type": "number"
            },
            "right": {
              "type": "number"
            },
            "top": {
              "type": "number"
            },
            "bottom": {
              "type": "number"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "string"
        }
      ],
      "description": "You can set the coordinates of the dragging boundary, or you can set the selector of the parent element."
    },
    "grid": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2,
      "description": "The step size for dragging in grid mode"
    },
    "handle": {
      "type": "string",
      "description": "Initialize the drag selector"
    },
    "cancel": {
      "type": "string",
      "description": "Disable drag selector"
    },
    "scale": {
      "type": "number",
      "description": "The scaling ratio of the drag distance, the default is 1"
    },
    "enableUserSelect": {
      "type": "boolean",
      "description": "The default setting inside the container is 'user-select:none', which can be turned off by setting true"
    }
  },
  "additionalProperties": false,
  "description": "Container drag and drop configuration",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "./ContainerDraggableConfig.json"
}